@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@model List<AutoTra.Models.DosenModel>
@{
    ViewData["Title"] = "Lecturer Data";
    int no = 1;
    var httpcontext = ViewContext.HttpContext;
    string role = httpcontext.Session.GetString("Role");
    Console.WriteLine("Role: " + role);
    if (role == "admin")
    {
        Layout = "~/Views/Shared/LayoutAdmin.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

<div class="row">
    <div class="col-lg-12">
        <br />

        <div class="card-body">

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="row">
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="bi bi-check-circle me-1"></i>
                        <strong>Sukses!</strong> @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"><i class="fa-solid fa-xmark"></i></button>
                    </div>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            }

            <a asp-controller="Dosen" class="btn btn-primary" asp-action="Create">+ Create Dosen</a>
            <br />
            <br />
            <form method="post">
                <div style="padding-left: 1080px;">
                    <div class="col-lg-12">
                <div class="input-group mb-3">
                            <input class="form-control" type="text" placeholder="Search Lecturer data by name or NPK.." aria-describedby="button-addon2" name="search">
                    <button class="btn btn-outline-secondary" id="button-addon2" type="submit">Cari</button>
                </div>
                </div>
                </div>
            </form>
            <br />
            <div class="card">

                <!-- Table with stripped rows -->
                <table class="table datable">
                    <thead>
                        <tr>
                            <th scope="col">No</th>
                            <th scope="col">NPK</th>
                            <th scope="col">Name</th>
                            <th scope="col">Username</th>
                            <th scope="col">Password</th>
                            <th scope="col">Role</th>
                            <th scope="col">Status</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var dsn in Model)
                        {
                            <tr>
                                <td>@(no++)</td>
                                <td>@dsn.npk</td>
                                <td>@dsn.nama</td>
                                <td>@dsn.username</td>
                                <td>
                                    <span class="password-field" data-password="@dsn.password">*******</span>
                                </td>
                                <td>@dsn.peran</td>
                                <td>@(dsn.status == 1 ? "Active" : "Non Active")</td>
                                <td>
                                    <button id="delete-button" class="btn btn-sm btn-danger delete-button" data-npk="@dsn.npk">
                                        <i class="fas fa-trash"></i>
                                    </button>

                                    <a asp-controller="Dosen" asp-action="Edit" asp-route-id="@dsn.npk" class="btn btn-sm btn-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button class="btn btn-sm btn-info btn-info-modal" data-toggle="modal" data-target="#infoModal_@dsn.npk">
                                        <i class="fas fa-info-circle"></i>
                                    </button>

                                    <div class="modal fade" id="infoModal_@dsn.npk" tabindex="-1" role="dialog" aria-labelledby="infoModalLabel" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Lecturer Information</h5>
                                                    <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close">
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    <strong>NPK :</strong>@dsn.npk<br />
                                                    <strong>Name :</strong>@dsn.nama<br />
                                                    <strong>Username :</strong>@dsn.username<br />
                                                    <strong>Password :</strong>@dsn.password<br />
                                                    <strong>Role :</strong>@dsn.peran<br />
                                                    <strong>Status :</strong>@dsn.status<br />
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Tutup</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <!-- End Table with stripped rows -->

            </div>

        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $(".delete-button").click(function () {
            var npk = $(this).data("npk");
            console.log("Deleting Dosen with npk:", npk);

            Swal.fire({
                title: "Delete dosen?",
                text: "Apakah Anda yakin ingin menghapus Dosen ini?",
                icon: "warning",
                showCancelButton: true,
                confirmButtonText: "Delete",
                cancelButtonText: "Cancel",
                buttons: true,
                dangerMode: true,
            }).then((willDelete) => {
                if (willDelete.isConfirmed) {
                    $.ajax({
                        url: "/Dosen/Delete/" + npk,
                        type: "POST",
                        success: function (data) {
                            if (data.success) {
                                console.log("Dosen deleted successfully");
                                Swal.fire("Sukses!", data.message, "success");
                                location.reload();
                            } else {
                                console.log("Failed to delete dosen");
                                Swal.fire("Gagal!", data.message, "error");
                            }
                        },
                        error: function () {
                            console.log("Error during AJAX request");
                            Swal.fire("Error!", "Terjadi kesalahan saat menghapus Dosen.", "error");
                        }
                    });
                } else {
                    console.log("Canceled deletion");
                }
            });
        });
    });
</script>
