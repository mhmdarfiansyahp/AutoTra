@model List<AutoTra.Models.PICModel>
@{
    ViewData["Title"] = "Data PIC";
    int no = 1;
}

<div class="row">
    <div class="col-lg-12">
        <br />

        <div class="card-body">

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="row">
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="bi bi-check-circle me-1"></i>
                        <strong>Sukses!</strong> @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            }

            <a asp-controller="PIC" class="btn btn-primary" asp-action="Create">+ Tambah PIC</a>
            <br />
            <br />
            <div class="card">

                <!-- Table with stripped rows -->
                <table class="table datable">
                    <thead>
                        <tr>
                            <th scope="col">No</th>
                            <th scope="col">NIM</th>
                            <th scope="col">Nama</th>
                            <th scope="col">Username</th>
                            <th scope="col">Password</th>
                            <th scope="col">Peran</th>
                            <th scope="col">Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var adm in Model)
                        {
                            <tr>
                                <td>@(no++)</td>
                                <td>@adm.nim</td>
                                <td>@adm.nama</td>
                                <td>@adm.username</td>
                                <td>@adm.password</td>
                                <td>@adm.peran</td>
                                <td>
                                    <button id="delete-button" class="btn btn-sm btn-danger delete-button" data-npk="@adm.nim">
                                        <i class="fas fa-trash"></i>
                                    </button>

                                    <a asp-controller="PIC" asp-action="Edit" asp-route-id="@adm.nim" class="btn btn-sm btn-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button class="btn btn-sm btn-info btn-info-modal" data-toggle="modal" data-target="#infoModal_@adm.nim">
                                        <i class="fas fa-info-circle"></i>
                                    </button>

                                    <div class="modal fade" id="infoModal_@adm.nim" tabindex="-1" role="dialog" aria-labelledby="infoModalLabel" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Informasi Buku</h5>
                                                    <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close">
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    <strong>NIM:</strong>@adm.nim<br />
                                                    <strong>Nama:</strong>@adm.nama<br />
                                                    <strong>Username:</strong>@adm.username<br />
                                                    <strong>Password:</strong>@adm.password<br />
                                                    <strong>Peran:</strong>@adm.peran<br />
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Tutup</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <!-- End Table with stripped rows -->

            </div>

        </div>
    </div>
</div>
