    <script>
        function updateNotificationCount() {
            $.ajax({
                url: '@Url.Action("GetUnreadNotificationCount", "Notifikasi2")',
                type: 'GET',
                success: function (result) {
                    if (result.unreadCount > 0) {
                        // Perbarui jumlah notifikasi di UI
                        $('.notification-count').text(result.unreadCount).show();
                    } else {
                        // Sembunyikan jumlah jika tidak ada notifikasi yang belum dibaca
                        $('.notification-count').hide();
                    }
                },
                error: function () {
                    console.error('Error fetching notification count');
                }
            });
        }

        // Panggil fungsi updateNotificationCount saat halaman dimuat
        $(document).ready(function () {
            updateNotificationCount();
        });

        // Anda dapat memanggil fungsi ini setiap kali status berubah untuk memperbarui jumlahnya
        // Sebagai contoh, panggil setelah mengirim formulir untuk mengubah status
        function onStatusChange() {
            // ... (kode yang sudah ada untuk mengubah status)

            // Perbarui jumlah notifikasi setelah perubahan status
            updateNotificationCount();
        }

    </script>

