@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/Layoutlogin.cshtml";

    // Static Superadmin credentials

}

<form method="post" asp-action="Login" asp-controller="Home" class="polman-form-login">
    <h4>Login</h4>
    <hr />
    @if (TempData["Notification"] != null)
    {
        <div class="alert alert-warning">
            @TempData["Notification"]
        </div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }


    <div class="form-group">
        <label for="txtUsername">
            Account Name
            <span style="color: red;">*</span>
        </label>
        <input type="text" id="username" name="username" maxlength="10" class="form-control" required=""
               oninvalid="this.setCustomValidity('Account Name is Required')"
               oninput="this.setCustomValidity('')">
    </div>

    <div class="form-group">
        <label for="txtPassword">
            Password
            <span style="color: red;">*</span>
        </label>
        <input id="password" type="password" name="password" class="form-control" required
               oninvalid="this.setCustomValidity('Password Required')"
               oninput="this.setCustomValidity('')">
        <div class="input-group-append">
            <div class="input-group-text">
                <br />
                <div style="padding-left: 175px;">
                <input type="checkbox" id="showPasswordCheckbox" onchange="togglePasswordVisibility()">
                <label class="form-check-label" for="showPasswordCheckbox" style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:16px; font-weight:450">Show Password</label>
                </div>
            </div>
        </div>
    </div>

    <button id="btnLogin" class="btn btn-primary" style="width: 100%; margin-top: 10px; margin-bottom: 10px;" title="Login">Login</button>

    <style>
        .polman-form-login {
            font-family: 'NAMA_FONT', Verdana;
            border-radius: 10px;
            overflow: hidden;
        }

        h4, label, input, button, span {
            font-family: 'NAMA_FONT', Verdana;
        }

    </style>
</form>
<script>
    function togglePasswordVisibility() {
        var passwordField = document.getElementById("password");
        if (passwordField.type === "password") {
            passwordField.type = "text";
        } else {
            passwordField.type = "password";
        }
    }
</script>
